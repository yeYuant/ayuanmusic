/* pages/recommendSong/recommendSong.wxss */
/* 头部样式 */
.header {
  position: relative;
  width: 100%;
  height: 340rpx;
}

.header image {
  width: 100%;
  height: 100%;
}

.header .date {
  position: absolute;
  top: 72%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 70rpx;
  color: #fff;
  /* font-weight: 700; */
  text-align: center;
  line-height: 70rpx;
  background-color: rgba(74, 143, 213, .1);
  border-radius: 27rpx;
}

.header .date .years {
  font-size: 32rpx;
}

/* 播放列表样式 */
.listContainer {
  position: relative;
  top: -20px;
  padding: 0 24rpx;
  border-radius: 47rpx;
  /* border: 1px solid #fff; */
  background-color: #fff;
}

.listContainer .listHeader {
  height: 87rpx;
  line-height: 87rpx;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 27rpx;

}

.listContainer .listHeader .moreChecked {
  float: right;
}

/* 推荐列表 */
.recommendScroll {
  height: calc(100vh - 370rpx)
}

.recommendScroll .scrollItem {
  margin-bottom: 17rpx;
  height: 87rpx;
}

.recommendScroll .scrollItem .recommendInfo {
  display: flex;
}

.recommendScroll .scrollItem image {
  margin-right: 17rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}

.recommendScroll .scrollItem .recommendInfo .songInfo {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  font-size: 27rpx;

}

.recommendScroll .scrollItem .recommendInfo .songInfo view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 470rpx;
}

.recommendScroll .scrollItem .recommendInfo .btn {
  background-color: transparent;
  width: 10rpx;
  text-align: center;
  margin-right: 0;
}

.recommendScroll .scrollItem .recommendInfo .btn text {
  font-size: 40rpx;
}